<UserControl x:Class="WhatMeal.Client.Controls.ColoredCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WhatMeal.Client.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas MouseDown="Canvas_MouseDown">
        <Rectangle x:Name="rectangle" Height="14" Width="14" Stroke="Black" StrokeThickness="1" />
        <Line x:Name="line1"  X1="0" Y1="5" X2="7" Y2="11" 
           Stroke="Black" StrokeThickness="2" Visibility="Collapsed" />
        <Line Name="line2" X1="7" Y1="12" X2="14" Y2="0" 
           Stroke="Black" StrokeThickness="2" Visibility="Collapsed" />
       </Canvas>
</UserControl>

<Window x:Class="WhatMeal.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WhatMeal.Client"
        mc:Ignorable="d"
        Background="LightGray"
        Title="WhatMeal" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Background="Gray" VerticalAlignment="Stretch">
            <Ellipse x:Name="elliStatus" Width="40" Height="40" StrokeThickness="1" Stroke="Black"
                     Fill="Red" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0" />
        </StackPanel>
     </Grid>
</Window>
